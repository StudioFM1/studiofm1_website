<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head.ejs') %>
</head>
<body>
    <%- include('../partials/adminHeader.ejs') %>
    <div class="container-fluid">
        <main class="p-5">
            <div class="table-wrapper">
                <div class="table-title clearfix">
                    <h2 class="float-start">Producer <b>Management</b></h2>
                    <button class="btn btn-secondary float-end mt-1" type="button" data-bs-toggle="modal" data-bs-target="#createProducerModal">Add New Producer <i class="fas fa-plus ms-2"></i></button>
                </div>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col"><a href="#">Name</a></th>
                            <th scope="col"><a href="#">Role</a></th>
                            <th scope="col"><a href="#">Status</a></th>
                            <th scope="col">Contact</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if(producers && producers.length) { %>
                            <% producers.forEach((producer, index) => { %>
                                <tr>
                                    <th class="fm1-td" scope="row"><%= index + 1 %></th>
                                    <td class="fm1-td"><img class="avatar small-avatar me-3" src="<%= producer.profile.avatar %>" alt="avatar"> <%= producer.profile.firstName %> <%= producer.profile.lastName %></td>
                                    <td class="fm1-td"><%= producer.profile.role %></td>
                                    <td class="fm1-td">
                                        <span id="<%= producer._id %>_statusIndicator" class="text-<%= producer.status.isActive ? (producer.status.isVisible ? 'success' : 'warning') : 'danger' %> me-3"><i class="fas fa-circle"></i></span>
                                        <span id="<%= producer._id %>_statusTextIndicator"><%= producer.status.isActive ? "Active" : "Inactive" %> / <%= producer.status.isVisible ? "Visible" : "Hidden" %></span>
                                    </td>
                                    <td class="fm1-td">
                                        Tel: <a href="tel:<%= producer.profile.mobilePhone %>"><%= producer.profile.mobilePhone %></a>
                                        <br>
                                        Email: <a href="mailto:<%= producer.profile.email %>"><%= producer.profile.email %></a>
                                    </td>
                                    <td class="fm1-td">
                                        <button class="btn btn-link" type="button" data-bs-toggle="modal" data-bs-target="#producerStatusModal" data-producer="<%= JSON.stringify(producer) %>"><i class="fas fa-cog" data-bs-toggle="tooltip" data-bs-placement="top" title="Settings"></i></button>
                                        <button class="btn btn-link text-danger" type="button" data-bs-toggle="modal" data-bs-target="#deleteProducerModal" data-producer="<%= JSON.stringify(producer) %>"><i class="fas fa-trash-alt" data-bs-toggle="tooltip" data-bs-placement="top" title="Delete"></i></button>
                                    </td>
                                </tr>
                            <% }); %>
                        <% }; %>
                    </tbody>
                </table>
            </div>
        </main>
    </div>
    <%- include('../partials/footer.ejs') %>
    <%- include('../partials/modals/createProducer.ejs') %>
    <%- include('../partials/modals/deleteProducer.ejs') %>
    <%- include('../partials/modals/producerStatus.ejs') %>
    <script src="/js/vendors/bootstrap.bundle.min.js"></script>
    <script src="/js/form.js"></script>
    <script src="/js/producers.js"></script>
    <script>
        /* Add event listeners when content is loaded */
        window.addEventListener('DOMContentLoaded', () => {
            addProducerFormEvents();
            addModalEvents();
        });
    </script>
</body>
</html>
