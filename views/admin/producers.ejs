<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head.ejs') %>
</head>
<body>
    <%- include('../partials/adminHeader.ejs') %>
    <div class="container-fluid">
        <main class="p-5">
            <div class="content-wrapper box-shadow">
                <div class="content-title table-title clearfix">
                    <h2 class="float-start">Producer <b>Management</b></h2>
                    <div class="float-end d-flex align-items-center mt-1">
                        <div class="dropdown me-2">
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="bulkActionsButton" data-bs-toggle="dropdown" aria-expanded="false">Bulk Actions</button>
                            <ul class="dropdown-menu" aria-labelledby="bulkActionsButton">
                                <li><a class="dropdown-item" data-bs-toggle="modal" data-bs-target="#actionModal" data-action="role" href="#">Assign Role</a></li>
                                <li><a class="dropdown-item" data-bs-toggle="modal" data-bs-target="#actionModal" data-action="status" href="#">Change Status</a></li>
                                <li><a class="dropdown-item" data-bs-toggle="modal" data-bs-target="#actionModal" data-action="delete" href="#">Delete</a></li>
                            </ul>
                        </div>
                        <div class="dropdown me-2">
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="viewByButton" data-bs-toggle="dropdown" aria-expanded="false">View By</button>
                            <ul class="dropdown-menu" aria-labelledby="viewByButton">
                                <li><a class="dropdown-item" href="/admin/producers?view=defaultView">Default</a></li>
                                <li><a class="dropdown-item" href="/admin/producers?view=roleView">Role</a></li>
                                <li><a class="dropdown-item" href="/admin/producers?view=statusView">Status</a></li>
                            </ul>
                        </div>
                        <div class="dropdown me-2">
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="sortButton" data-bs-toggle="dropdown" aria-expanded="false">Sort</button>
                            <ul class="dropdown-menu" aria-labelledby="sortButton">
                                <li><a class="dropdown-item sort-link" href="#" data-sorting="firstname_ascending">First Name<i class="fas fa-sort-alpha-down sort-icon ms-2"></i></a></li>
                                <li><a class="dropdown-item sort-link" href="#" data-sorting="firstname_descending">First Name DESC<i class="fas fa-sort-alpha-up ms-2"></i></a></li>
                                <li><a class="dropdown-item sort-link" href="#" data-sorting="lastname_ascending">Last Name ASC<i class="fas fa-sort-alpha-down ms-2"></i></a></li>
                                <li><a class="dropdown-item sort-link" href="#" data-sorting="lastname_descending">Last Name DESC<i class="fas fa-sort-alpha-up ms-2"></i></a></li>
                                <li><a class="dropdown-item sort-link" href="#" data-sorting="creation_ascending">Created At ASC<i class="fas fa-sort-numeric-down ms-2"></i></a></li>
                                <li><a class="dropdown-item sort-link" href="#" data-sorting="creation_descending">Created At DESC<i class="fas fa-sort-numeric-up ms-2"></i></a></li>
                            </ul>
                        </div>
                        <button class="btn btn-secondary me-2" type="button" data-bs-toggle="modal" data-bs-target="#createProducerModal">Add<i class="fas fa-plus ms-2"></i></button>
                        <form class="search-form">
                            <input class="form-control" type="search" placeholder="Search" aria-label="Search">
                            <button class="search-btn" type="submit"><i class="fas fa-search"></i></button>
                        </form>
                    </div>
                </div>
                <% for(const prop in producerObject) { %>
                    <% if(producerObject[prop].length) { %>
                        <h4><%= prop.charAt(0).toUpperCase() + prop.slice(1); %></h4>
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">
                                        <div class="form-check">
                                            <input class="form-check-input master-checkbox" type="checkbox" data-role="<%= prop %>">
                                        </div>
                                    </th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Role</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Contact</th>
                                    <th scope="col">Added By</th>
                                    <th scope="col">Created At</th>
                                    <th scope="col">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% producerObject[prop].forEach((producer, index) => { %>
                                    <tr id="<%= producer._id %>">
                                        <td class="fm1-td">
                                            <div class="form-check">
                                                <input class="form-check-input action-checkbox" type="checkbox" data-role="<%= prop %>" data-id="<%= producer._id %>">
                                            </div>
                                        </td>
                                        <td class="fm1-td"><img class="avatar small-avatar me-3" src="<%= producer.profile.avatar %>" alt="avatar"><%= producer.profile.firstName %> <%= producer.profile.lastName %></td>
                                        <td class="fm1-td"><%= producer.profile.role %></td>
                                        <td class="fm1-td">
                                            <span id="<%= producer._id %>_statusIndicator" class="text-<%= producer.status.isActive ? producer.status.isVerified ? 'success' : 'warning' : 'danger' %>"><i class="fas fa-circle"></i></span>
                                            <span id="<%= producer._id %>_statusTextIndicator"><%= producer.status.isActive ? producer.status.isVerified ? 'Active' : 'Active (not verified)' : 'Inactive' %></span>
                                        </td>
                                        <td class="fm1-td">
                                            Tel: <a href="tel:<%= producer.profile.mobilePhone %>"><%= producer.profile.mobilePhone %></a>
                                            <br>
                                            Email: <a href="mailto:<%= producer.profile.email %>"><%= producer.profile.email %></a>
                                        </td>
                                        <td><%= producer.addedBy %></td>
                                        <td><%= `${producer.createdAt.getDay() + 1}/${producer.createdAt.getMonth() + 1}/${producer.createdAt.getFullYear()}` %></td>
                                        <td>
                                            <div class="d-flex flex-column">
                                                <a href="#" class="toggle-status-link" data-id="<%= producer._id %>" data-action="status" data-value="<%= producer.status.isActive ? false : true %>"><%= producer.status.isActive ? 'Deactivate' : 'Activate' %></a>
                                                <a href="#" class="text-danger delete-link" data-id="<%= producer._id %>" data-action="delete">Delete</a>
                                            </div>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                        <div class="clearfix">
                            <span class="float-end">Total producers: <%= producerObject[prop].length %></span>
                        </div>
                    <% } %>
                <% } %>
            </div>
        </main>
    </div>
    <%- include('../partials/footer.ejs') %>
    <%- include('../partials/modals/createProducerModal.ejs') %>
    <%- include('../partials/modals/actionModal.ejs') %>
    <script src="/js/vendors/bootstrap.bundle.min.js"></script>
    <script src="/js/form.js"></script>
    <script src="/js/producersActions.js"></script>
    <!-- <script src="/js/producers.js"></script> -->
    <script>
        /* Add event listeners when content is loaded */
        window.addEventListener('DOMContentLoaded', () => {
            addFm1FormEvents();
            addActionEvents();
        });
    </script>
</body>
</html>
